<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Lexicon_AvaloniaVersion.Views.CategoryUC">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<Border BorderBrush="Gray" Margin="8 4" BorderThickness="0 0 0 1">
			<StackPanel>
				<Border BorderBrush="Gray" BorderThickness="0 0 0 1" Margin="0 0 0 2">
					<TextBlock Text="Categories" FontSize="14" FontWeight="Bold"/>
				</Border>
				<ItemsControl Items="{Binding categories}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Grid>
								<StackPanel>
									<Button Classes="CatButton" Content="{Binding CategoryName}"/>
									<ItemsControl Items="{Binding Entries}">
										<ItemsControl.ItemTemplate>
											<DataTemplate>
												<Button Classes="EntryButton" Content="{Binding EntryName}"/>
											</DataTemplate>
										</ItemsControl.ItemTemplate>
									</ItemsControl>
								</StackPanel>
							</Grid>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</StackPanel>
		</Border>
		<StackPanel Grid.Row="1" Margin="10 0">
			<Button x:Name="NewEntryBtn" Content="New Entry"
					Command="{Binding $parent[Window].DataContext.NewEntry}"/>
		</StackPanel>
	</Grid>
</UserControl>
