<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Lexicon_AvaloniaVersion.Views.CategoryUC">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<Border BorderBrush="Gray" Margin="8 4" BorderThickness="0 0 0 1">
			<ItemsControl Items="{Binding $parent[Window].DataContext.categories}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<StackPanel Grid.Row="0" Orientation="Horizontal">
							<TextBlock Text="{Binding CategoryName}"
									   VerticalAlignment="Center"
									   Margin="0 0 5 0" FontSize="14"/>
							<Button x:Name="CatBtn" Command="{Binding $parent[Window].DataContext.OpenCloseCategory}" Content=">"/>
						</StackPanel>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</Border>
		<StackPanel Grid.Row="1" Margin="10 0">
			<Button x:Name="NewEntryBtn" Content="New Entry"
					Command="{Binding $parent[Window].DataContext.NewEntry}"/>
		</StackPanel>
	</Grid>
</UserControl>
