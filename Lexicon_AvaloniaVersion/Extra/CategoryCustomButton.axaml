<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Lexicon_AvaloniaVersion.Extra.CategoryCustomButton">
	<StackPanel>
		<StackPanel.Styles>
			<!-- Textblock -->
			<Style Selector="TextBlock.CustomCatBtn">
				<Setter Property="Foreground" Value="Green"/>
				<Setter Property="Background" Value="LightGray"/>
				<Setter Property="MinWidth" Value="20"/>
				<Setter Property="MinHeight" Value="20"/>
				<Setter Property="Width" Value="20"/>
				<Setter Property="Height" Value="20"/>
			</Style>
			<Style Selector="TextBlock.CustomCatBtn:pointerover">
				<Setter Property="Background" Value="Red"/>
			</Style>
			
			<!-- Border -->
			
		</StackPanel.Styles>
		<Border Classes="CustomCatBtn">
			<TextBlock Classes="CustomCatBtn" Text="CUSTOM"/>
		</Border>
	</StackPanel>
</UserControl>
